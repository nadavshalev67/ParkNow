<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:animationCache="true"
    android:background="#FFF">

    <ImageView
        android:id="@+id/sign_in_logo"
        android:layout_width="309dp"
        android:layout_height="171dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/parknowlogo"
        android:contentDescription="@string/logo" />

    <View
        android:id="@+id/seperator"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/sign_in_logo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#C9C9C9" />

    <TextView

        android:id="@+id/txt_sign_user"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@id/seperator"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/txt_enter"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:paddingLeft="5dp"
        android:id="@+id/username_enter_txt"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@id/seperator"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/txt_sign_user"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/b_sign_psw"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@id/txt_sign_user"
        android:layout_alignRight="@id/txt_sign_user"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/psw_enter"
        android:textColor="#000000"
        android:textSize="18sp" />


    <EditText
        android:paddingLeft="5dp"
        android:id="@+id/psw_enter_txt"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@id/username_enter_txt"
        android:layout_alignTop="@id/b_sign_psw"
        android:layout_alignRight="@id/username_enter_txt"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_enter_txt" />


    <Button
        android:id="@+id/reg_buttoun"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_below="@id/b_sign_psw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_blue_light"
        android:text="@string/b_connect"
        android:textAlignment="center"
        android:textColor="#F8F8F8"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_forget_psw"
        android:layout_width="163dp"
        android:layout_height="26dp"
        android:layout_below="@id/reg_buttoun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/txt_forget"
        android:textAlignment="center"
        android:textColor="#64B5F6" />

</RelativeLayout>
